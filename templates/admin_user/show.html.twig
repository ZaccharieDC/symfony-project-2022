{% extends 'base.html.twig' %}

{% block title %}AdminUser{% endblock %}

{% block body %}
    <h1>AdminUser</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Username</th>
                <td>{{ admin_user.username }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ admin_user.email }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_user_index') }}">back to list</a>

    <a href="{{ path('app_admin_user_edit', {'id': admin_user.id}) }}">edit</a>
    {% if is_granted('delete', admin_user) %}
        {{ include('admin_user/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
